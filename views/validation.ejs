<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=a, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="menu">
        <button class="btnconnect" onclick="window.location.href='/connexion'">
            Connexion
        </button>
       
        <button class="btnvalidation" onclick="window.location.href='/validation'">
            Validation des missions
        </button>
        <button class="btnpaiement" onclick="window.location.href='/paiement'">
            Paiement des frais
        </button>
        <button class="btnparametre" onclick="window.location.href='/parametre'">
            Paramétrage
        </button>
    </div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
               
                <th scope="col">Nom du salarié</th>
                <th scope="col">Date début mission</th>
                <th scope="col">Date fin de mission</th>
                <th scope="col">Ville de départ</th>
                <th scope="col">Ville de la mission</th>
                <th scope="col">Etat de la mission</th>
            </tr>
        </thead>
        <tbody>
            <% console.log(contenu) %>
            <% contenu.forEach(function(mission,i){ %>
            
                <tr>
                    
                    <td>
                        <%= mission.sa_nom %> <%= mission.sa_prenom %> 

                    </td>

                    <td>
                        <%= mission.mi_dateDebut %>
                    </td>
                    <td >
                        <%= mission.mi_dateFin %>
                    </td>
                    <td>
                        <%= contenubis[i].lieuDepart%>
                    </td>
                    <td>
                        <%= mission.lieuMission %>
                    </td>
                    <td>
                        <% if(  mission.mi_validee  == 0 ) {%>
                        <form action="/validation/modifEtatMission/<%= mission.mi_id %>" method="post"><button type="submit">Valider la mission</button></form>
                        <% } else { %>
                        Déjà validée
                        <% } %>
                    </td>
                </tr>
                <% })%>
        </tbody>
    </table>

</body>
</html>